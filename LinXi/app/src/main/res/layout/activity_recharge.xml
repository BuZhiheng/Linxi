<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    >
    <include layout="@layout/include_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height39"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/common_margin"
        android:layout_marginTop="@dimen/common_margin"
        android:gravity="center_vertical"
        android:text="付款方式"
        android:textSize="@dimen/text_common_item_title"
        android:textColor="@color/color_black_text"
        />
    <FrameLayout
        android:id="@+id/fl_recharge_zfb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height39"
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:onClick="onClick"
        >
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_pay_zfb"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="49dp"
            android:gravity="center_vertical"
            android:text="支付宝"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"
            />
        <ImageView
            android:id="@+id/iv_recharge_checkzfb"
            android:layout_gravity="center_vertical|right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="@dimen/common_margin"
            android:src="@drawable/ic_station_checked"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_recharge_wx"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height39"
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:onClick="onClick"
        >
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_pay_wx"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="49dp"
            android:gravity="center_vertical"
            android:text="微信"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"
            />
        <ImageView
            android:id="@+id/iv_recharge_checkwx"
            android:layout_gravity="center_vertical|right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="@dimen/common_margin"
            android:src="@drawable/ic_station_check"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:padding="@dimen/common_margin"
        android:background="@color/color_white"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="金额"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_title_height"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginBottom="@dimen/common_margin"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:text="￥"
                android:textSize="@dimen/text_main_title"
                />
            <EditText
                android:id="@+id/et_recharge_cout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"
                android:inputType="numberDecimal"
                android:hint="请输入金额"
                android:textColorHint="@color/color_gray"
                android:textSize="30sp"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_recharge_commit"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@drawable/bg_ll_station_goods_yellow"
        android:layout_marginLeft="@dimen/common_title_height"
        android:layout_marginRight="@dimen/common_title_height"
        android:layout_marginTop="@dimen/common_title_height30"
        android:text="下一步"
        android:textSize="@dimen/text_common_item_title"
        android:textColor="@color/color_white"
        />
</LinearLayout>