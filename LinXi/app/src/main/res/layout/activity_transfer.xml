<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    >
    <include layout="@layout/include_title_right_img"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_transfer_title"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/color_white"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/common_title_height"
                    android:layout_height="@dimen/common_title_height"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:src="@drawable/ic_launcher"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/app_name"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="15dp"
                    android:drawableLeft="@drawable/ic_station_loc"
                    android:text="@string/app_name"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <Button
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/common_title_height30"
                    android:layout_marginRight="@dimen/common_margin_large"
                    android:background="@drawable/bg_ll_boss_money"
                    android:text="我要去这"
                    android:textSize="@dimen/text_common_item_content"
                    android:textColor="@color/color_white"
                    />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>