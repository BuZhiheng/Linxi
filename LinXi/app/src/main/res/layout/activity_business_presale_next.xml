<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_presale"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/color_main"
        >
        <FrameLayout
            android:id="@+id/fl_presale_back"
            android:layout_width="@dimen/common_title_height"
            android:layout_height="match_parent"
            android:clickable="true"
            android:onClick="onClick">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:src="@drawable/ic_back"
                />
        </FrameLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_presale_byplate"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号"
                android:textSize="@dimen/text_main_title"
                android:textColor="@color/color_white"
                android:onClick="onClick"
                />
            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="@dimen/common_margin_large"
                android:layout_marginRight="@dimen/common_margin_large"
                android:background="@color/color_white"
                />
            <TextView
                android:id="@+id/tv_presale_byphone"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textSize="@dimen/text_main_title"
                android:textColor="@color/color_gray"
                android:onClick="onClick"
                />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_presale_byphone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/common_title_height"
        android:gravity="center_horizontal"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/common_title_height30"
            android:layout_marginRight="@dimen/common_title_height30"
            android:layout_marginTop="@dimen/common_title_height"
            android:background="@drawable/bg_ll_common_solid_white"
            android:gravity="center"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:src="@drawable/ic_login_user"
                    />
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/color_gray_deep"
                    />
                <EditText
                    android:id="@+id/et_business_salebyphone_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:hint="请输入车主手机号"
                    android:inputType="number"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColorHint="@color/color_gray"
                    android:background="@null"
                    />
            </FrameLayout>
            <include layout="@layout/include_div_match"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/et_business_salebyphone_code"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_margin"
                    android:hint="请输入验证码"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColorHint="@color/color_gray_deep"
                    android:background="@null"
                    />
                <Button
                    android:id="@+id/btn_business_salebyphone_getcode"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:background="@drawable/bg_ll_station_gothere"
                    android:text="获取验证码"
                    android:textColor="@color/color_main"
                    android:onClick="onClick"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_business_salebyphone_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_title_height"
            android:layout_marginTop="@dimen/common_title_height"
            android:layout_marginLeft="@dimen/common_title_height30"
            android:layout_marginRight="@dimen/common_title_height30"
            android:background="@drawable/bg_ll_station_goods_yellow"
            android:text="提交"
            android:textSize="@dimen/text_main_title"
            android:textColor="@color/color_white"
            android:onClick="onClick"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_presale_byplate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_title_height"
        android:layout_gravity="center_horizontal|bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/common_title_height30"
            android:layout_marginRight="@dimen/common_title_height30"
            android:layout_marginTop="@dimen/common_title_height"
            android:background="@drawable/bg_ll_common_solid_white"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_business_presale_selectp"
                    android:layout_width="@dimen/common_title_height39"
                    android:layout_height="match_parent"
                    android:background="@color/color_main"
                    android:gravity="center"
                    android:text="鲁"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_main_title"
                    android:onClick="onClick"
                    />
                <ImageView
                    android:id="@+id/iv_business_presale_selectp"
                    android:layout_width="@dimen/common_margin_large"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="@dimen/common_margin_little"
                    android:src="@drawable/ic_business_presale_province"
                    android:background="@color/color_main"
                    android:onClick="onClick"
                    />
                <EditText
                    android:id="@+id/et_business_saleby_plate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:hint="例:A88888"
                    android:gravity="center_vertical"
                    android:editable="false"
                    android:maxLength="6"
                    android:textSize="@dimen/text_main_title"
                    android:textColorHint="@color/color_gray"
                    android:background="@null"
                    android:onClick="onClick"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_business_salebyplate_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_title_height"
            android:layout_marginTop="@dimen/common_title_height"
            android:layout_marginLeft="@dimen/common_title_height30"
            android:layout_marginRight="@dimen/common_title_height30"
            android:background="@drawable/bg_ll_station_goods_yellow"
            android:text="提交"
            android:textSize="@dimen/text_main_title"
            android:textColor="@color/color_white"
            android:onClick="onClick"
            />
    </LinearLayout>
</FrameLayout>