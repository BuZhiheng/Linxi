<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/include_title_right_bindphone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin"
            android:text="为了您的账户安全请绑定手机"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/common_title_height"
            android:layout_marginRight="@dimen/common_title_height"
            android:layout_marginTop="@dimen/common_title_height"
            android:background="@drawable/bg_ll_common_solid_white"
            android:gravity="center"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                >
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="+86"
                    />
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="@dimen/common_title_height"
                    android:layout_marginBottom="15dp"
                    android:background="@color/color_gray_deep"
                    />
                <EditText
                    android:id="@+id/et_bindphone_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:hint="请输入手机号"
                    android:textSize="@dimen/text_common_item_title"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/color_gray"
                    android:background="@null"
                    />
            </FrameLayout>
            <include layout="@layout/include_div_match"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/et_bindphone_code"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_margin"
                    android:hint="请输入验证码"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColorHint="@color/color_gray_deep"
                    android:background="@null"
                    />
                <Button
                    android:id="@+id/btn_bindphone_getcode"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:background="@drawable/bg_ll_station_gothere"
                    android:text="获取验证码"
                    android:textColor="@color/color_main"
                    android:onClick="onClick"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_bindphone_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_title_height"
            android:layout_marginTop="@dimen/common_title_height"
            android:layout_marginLeft="@dimen/common_title_height"
            android:layout_marginRight="@dimen/common_title_height"
            android:background="@drawable/bg_ll_station_goods_yellow"
            android:text="确定"
            android:textSize="@dimen/text_main_title"
            android:textColor="@color/color_white"
            android:onClick="onClick"
            />
    </LinearLayout>
</LinearLayout>