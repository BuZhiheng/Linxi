<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    >
    <include layout="@layout/include_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_transfer_order_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:background="@color/color_white"
                android:layout_marginTop="@dimen/common_margin"
                android:paddingLeft="@dimen/common_margin"
                android:drawableLeft="@drawable/iv_automac_detail_format"
                android:gravity="center_vertical"
                android:text="  购买明细"
                android:textSize="@dimen/text_common_item_title"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height30"
                android:orientation="horizontal"
                android:background="@color/color_blue_shallow"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="单价"
                    android:textColor="@color/color_white"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="升数"
                    android:textColor="@color/color_white"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="价格"
                    android:textColor="@color/color_white"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_transfer_order_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height39"
                android:layout_marginTop="@dimen/common_margin"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/common_margin"
                android:gravity="center_vertical"
                android:text="付款方式"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_gray_deep"
                />
            <include layout="@layout/include_div_match_margin10"/>
            <FrameLayout
                android:id="@+id/fl_order_pay_zfb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height39"
                android:background="@color/color_white"
                android:onClick="onClick"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:src="@drawable/ic_pay_zfb"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="49dp"
                    android:gravity="center_vertical"
                    android:text="支付宝"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <ImageView
                    android:id="@+id/iv_orderpy_checkzfb"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/common_margin"
                    android:src="@drawable/ic_station_checked"
                    />
            </FrameLayout>
            <include layout="@layout/include_div_match_margin10"/>
            <FrameLayout
                android:id="@+id/fl_order_pay_wx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height39"
                android:background="@color/color_white"
                android:onClick="onClick"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:src="@drawable/ic_pay_wx"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="49dp"
                    android:gravity="center_vertical"
                    android:text="微    信"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <ImageView
                    android:id="@+id/iv_orderpy_checkwx"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/common_margin"
                    android:src="@drawable/ic_station_check"
                    />
            </FrameLayout>
            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_margin"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实付:"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <TextView
                    android:id="@+id/tv_transfer_order_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_red"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btn_transfer_order_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:layout_margin="@dimen/common_margin_large"
                android:background="@drawable/bg_ll_boss_money"
                android:text="立即付款"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_white"
                android:onClick="onClick"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>