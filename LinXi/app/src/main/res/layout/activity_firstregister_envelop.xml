<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/iv_firstregister_envelop"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_firstregiser_envelop"
            android:onClick="onClick"
            />
        <ImageView
            android:id="@+id/iv_firstregister_finish"
            android:layout_width="@dimen/common_title_height30"
            android:layout_height="@dimen/common_title_height30"
            android:layout_marginTop="@dimen/common_margin_large"
            android:src="@drawable/ic_firstregiser_envelop_finish"
            android:onClick="onClick"
            />
    </LinearLayout>
</LinearLayout>