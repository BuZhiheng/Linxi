<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/include_div_match"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/ll_main_bottom_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:onClick="onClick"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_main_bottom_buy"
                android:layout_width="@dimen/main_bottom_imgsize"
                android:layout_height="@dimen/main_bottom_imgsize"
                android:layout_marginLeft="2dp"
                android:src="@drawable/ic_mainact_buyc"/>
            <TextView
                android:id="@+id/tv_main_bottom_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_bottom_margintop"
                android:text="买油"
                android:textSize="@dimen/main_bottom_text"
                android:textColor="@color/color_main"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_bottom_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:onClick="onClick"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_main_bottom_code"
                android:layout_width="@dimen/main_bottom_imgsize"
                android:layout_height="@dimen/main_bottom_imgsize"
                android:layout_marginLeft="2dp"
                android:src="@drawable/ic_mainact_code"/>
            <TextView
                android:id="@+id/tv_main_bottom_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_bottom_margintop"
                android:text="加油"
                android:textSize="@dimen/main_bottom_text"
                android:textColor="@color/color_black_text"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_bottom_sale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:onClick="onClick"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_main_bottom_sale"
                android:layout_width="@dimen/main_bottom_imgsize"
                android:layout_height="@dimen/main_bottom_imgsize"
                android:layout_marginLeft="2dp"
                android:src="@drawable/ic_mainact_sale"/>
            <TextView
                android:id="@+id/tv_main_bottom_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_bottom_margintop"
                android:text="转让"
                android:textSize="@dimen/main_bottom_text"
                android:textColor="@color/color_black_text"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main_bottom_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:onClick="onClick"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_main_bottom_mine"
                android:layout_width="@dimen/main_bottom_imgsize"
                android:layout_height="@dimen/main_bottom_imgsize"
                android:src="@drawable/ic_mainact_mine"/>
            <TextView
                android:id="@+id/tv_main_bottom_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_bottom_margintop"
                android:text="我的"
                android:textSize="@dimen/main_bottom_text"
                android:textColor="@color/color_black_text"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>