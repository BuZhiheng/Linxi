<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    >
    <include layout="@layout/include_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_title_height"
        android:layout_marginBottom="@dimen/common_title_height"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_margin"
                android:text="加油站"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_black_text"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/color_white"
                >
                <ImageView
                    android:id="@+id/iv_myoilcard_photo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:src="@drawable/ic_minefrm_userdefault"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/tv_myoilcard_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上海加油站"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_black_text"
                        />
                    <TextView
                        android:id="@+id/tv_myoilcard_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_margin"
                        android:text="徐汇区虹桥路"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_gray_deep"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_margin"
                android:text="转让参考价"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_black_text"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:gravity="center"
                >
                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_marginTop="@dimen/common_margin"
                    android:text="转让参考价"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_marginTop="@dimen/common_margin"
                    android:text="油品：92#"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_title_height39"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/common_margin"
                        android:gravity="center_vertical"
                        android:text="转让价"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_black_text"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <LinearLayout
                            android:layout_gravity="center_vertical|right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/common_margin"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/iv_transfer_sale_price_sub"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_station_sub"
                                android:background="@drawable/bg_ll_mainfrm_price"
                                />
                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/common_margin"
                                android:layout_marginRight="@dimen/common_margin"
                                android:background="@drawable/bg_ll_mainfrm_price"
                                >
                                <EditText
                                    android:id="@+id/et_transfer_sale_price_cout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/common_margin"
                                    android:background="@null"
                                    android:inputType="numberDecimal"
                                    android:text="20.0"
                                    android:textSize="@dimen/text_common_item_title"
                                    />
                                <TextView
                                    android:layout_gravity="right|center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/common_margin_little"
                                    android:gravity="center"
                                    android:text="元/L"
                                    />
                            </FrameLayout>
                            <ImageView
                                android:id="@+id/iv_transfer_sale_price_add"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_station_add"
                                android:background="@drawable/bg_ll_mainfrm_price"
                                />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_title_height39"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/common_margin"
                        android:gravity="center_vertical"
                        android:text="转让价"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_black_text"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <LinearLayout
                            android:layout_gravity="center_vertical|right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/common_margin"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/iv_transfer_sale_purchase_sub"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_station_sub"
                                android:background="@drawable/bg_ll_mainfrm_price"
                                />
                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/common_margin"
                                android:layout_marginRight="@dimen/common_margin"
                                android:background="@drawable/bg_ll_mainfrm_price"
                                >
                                <EditText
                                    android:id="@+id/et_transfer_sale_purchase_cout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/common_margin"
                                    android:background="@null"
                                    android:inputType="numberDecimal"
                                    android:text="20.0"
                                    android:textSize="@dimen/text_common_item_title"
                                    />
                                <TextView
                                    android:layout_gravity="right|center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/common_margin_little"
                                    android:gravity="center"
                                    android:text="元/L"
                                    />
                            </FrameLayout>
                            <ImageView
                                android:id="@+id/iv_transfer_sale_purchase_add"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_station_add"
                                android:background="@drawable/bg_ll_mainfrm_price"
                                />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_automac_type_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/color_blue_shallow"
            android:text="取消"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_white"
            android:onClick="onClick"
            />
        <TextView
            android:id="@+id/tv_automac_type_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/color_blue"
            android:text="确定"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_white"
            android:onClick="onClick"
            />
    </LinearLayout>
</FrameLayout>