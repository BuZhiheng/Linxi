<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height30"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_marginBottom="@dimen/common_margin"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_market_item_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="92#"
            android:textSize="@dimen/text_common_item_content"
            />
        <TextView
            android:id="@+id/tv_market_item_purchase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100L"
            android:textSize="@dimen/text_common_item_content"
            />
        <TextView
            android:id="@+id/tv_market_item_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100L"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_red_orange"
            />
    </LinearLayout>
</LinearLayout>