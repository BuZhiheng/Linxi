<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_myorder_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_ll_mainfrm_nostroke"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height30"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_myorder_item_name"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/common_margin"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="支付金额"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height30"
        >
        <TextView
            android:id="@+id/tv_myorder_item_time"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/common_margin"
            android:gravity="center_vertical"
            android:text="2017-10-10"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_gray_deep"
            />
        <TextView
            android:id="@+id/tv_myorder_item_amount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"
            />
    </LinearLayout>
    <include layout="@layout/include_div_match"/>
    <LinearLayout
        android:id="@+id/ll_myorder_history_item"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
    <include layout="@layout/include_div_matchw10h"/>
</LinearLayout>