<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height30"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_shopping_car_itemstation"
            />
        <TextView
            android:id="@+id/tv_ordergoods_station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="@string/app_name"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_mainfrm_right"
            />
    </LinearLayout>
    <include layout="@layout/include_div_match"/>
    <LinearLayout
        android:id="@+id/ll_order_station_goods_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin_little"
            android:text="总额 : "
            android:textSize="@dimen/text_common_item_title"
            />
        <TextView
            android:id="@+id/tv_ordergoods_station_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_little"
            android:layout_marginLeft="60dp"
            android:text="0元"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_red"
            />
        <TextView
            android:id="@+id/tv_ordergoods_station_time"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="2017-04-11"
            />
    </FrameLayout>
    <include layout="@layout/include_div_matchw10h"/>
</LinearLayout>