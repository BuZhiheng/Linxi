<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="100dp">
    <LinearLayout
        android:id="@+id/ll_recharge_discount_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_marginLeft="@dimen/common_margin_little"
        android:layout_marginRight="@dimen/common_margin_little"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/ic_recharge_discount_bg1"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/common_margin"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_recharge_discount_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="@dimen/text_main_title"
                android:textColor="@color/color_white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_bottom_margintop"
                android:text="元"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_white"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_recharge_discount_item_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:text="88折"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_white"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_recharge_check"
        android:layout_width="@dimen/common_title_height"
        android:layout_height="@dimen/common_title_height"
        android:src="@drawable/ic_recharge_discount"
        android:visibility="gone"
        />
</FrameLayout>