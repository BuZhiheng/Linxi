<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bg_ll_mainfrm_nostroke"
        android:orientation="vertical" >
        <TextView
            android:layout_width="260dp"
            android:layout_height="@dimen/common_title_height"
            android:gravity="center"
            android:background="@drawable/bg_ll_signsuccess_title"
            android:text="请确认订单"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_white"
            />
        <TextView
            android:id="@+id/tv_customersure_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginBottom="@dimen/common_margin"
            android:gravity="center"
            android:text="大世界加油站"
            android:textSize="@dimen/text_main_title"
            android:textColor="@color/color_black"
            />
        <TextView
            android:id="@+id/tv_customersure_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"
            />
        <TextView
            android:id="@+id/tv_customersure_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_customerorder_cancel"
                android:layout_width="100dp"
                android:layout_height="@dimen/common_title_height39"
                android:background="@drawable/bg_ll_station_gothere"
                android:layout_marginTop="@dimen/common_title_height30"
                android:layout_marginBottom="@dimen/common_title_height30"
                android:text="关闭"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_main"
                android:onClick="onClick"
                />
            <Button
                android:id="@+id/btn_customerorder_sure"
                android:layout_width="100dp"
                android:layout_height="@dimen/common_title_height39"
                android:background="@drawable/bg_ll_station_gothere"
                android:layout_marginTop="@dimen/common_title_height30"
                android:layout_marginBottom="@dimen/common_title_height30"
                android:text="确定"
                android:layout_marginLeft="@dimen/common_margin"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_main"
                android:onClick="onClick"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>