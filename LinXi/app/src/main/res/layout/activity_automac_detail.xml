<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/include_title_right_img"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_title_height"
        android:layout_marginBottom="@dimen/common_title_height"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <!--<include layout="@layout/activity_automac_detail_banner"/>-->
            <ImageView
                android:id="@+id/iv_automac_detail_pic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />
            <include layout="@layout/include_div_matchw10h"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_automac_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_marginRight="100dp"
                    android:text=""
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_marginBottom="@dimen/common_title_height30"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/main_bottom_margintop"
                        android:text="¥"
                        android:textSize="@dimen/text_common_item_content"
                        android:textColor="@color/color_red"
                        />
                    <TextView
                        android:id="@+id/tv_automac_detail_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin_little"
                        android:text="200"
                        android:textSize="@dimen/text_main_title"
                        android:textColor="@color/color_red"
                        />
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin"
                        >
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="原价100.29"
                            android:textSize="@dimen/text_common_item_content"
                            android:textColor="@color/color_gray_deep"
                            />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="0.3dp"
                            android:layout_gravity="center"
                            android:src="@color/color_gray_deep"
                            />
                    </FrameLayout>
                </LinearLayout>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_marginBottom="@dimen/common_margin_little"
                    android:text="如有市场价格变动,请以客服最终确认为准"
                    android:textSize="@dimen/text_common_item_content"
                    android:textColor="@color/color_gray_deep"
                    />
            </LinearLayout>
            <include layout="@layout/include_div_match"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                >
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:text="购买数量"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >
                    <ImageView
                        android:id="@+id/iv_automac_detail_sub"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_station_sub"
                        android:background="@drawable/bg_ll_mainfrm_price"
                        android:onClick="onClick"
                        />
                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:layout_marginRight="@dimen/common_margin"
                        android:background="@drawable/bg_ll_mainfrm_price"
                        >
                        <EditText
                            android:id="@+id/et_automac_detail_cout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/common_margin_little"
                            android:background="@null"
                            android:inputType="number"
                            android:text="1"
                            android:textSize="@dimen/text_common_item_title"
                            android:textColor="@color/color_black_text"
                            />
                        <ImageView
                            android:id="@+id/iv_automac_detail_clear"
                            android:layout_gravity="right|center_vertical"
                            android:layout_width="@dimen/common_title_height30"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:src="@drawable/ic_common_etclear"
                            android:onClick="onClick"
                            />
                    </FrameLayout>
                    <ImageView
                        android:id="@+id/iv_automac_detail_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_station_add"
                        android:background="@drawable/bg_ll_mainfrm_price"
                        android:onClick="onClick"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_automac_detail_stock"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_margin"
                    android:text="库存"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_black_text"
                    />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height39"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/color_bg"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/iv_automac_detail_format"
                    android:layout_marginLeft="@dimen/common_margin"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:text="规格参数"
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_gray_deep"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_automac_detail_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_automac_detail_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/color_blue_shallow"
            android:text="放入购物车"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_white"
            android:onClick="onClick"
            />
        <TextView
            android:id="@+id/tv_automac_detail_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/color_blue"
            android:text="立即购买"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_white"
            android:onClick="onClick"
            />
    </LinearLayout>
</FrameLayout>