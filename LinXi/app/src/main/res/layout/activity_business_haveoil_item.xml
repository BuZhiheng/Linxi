<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <FrameLayout
        android:id="@+id/fl_business_haveoil_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:layout_marginBottom="@dimen/common_margin_little"
        android:background="@drawable/bg_ll_business_haveoil_oilaccount"
        android:padding="1dp"
        >
        <TextView
            android:id="@+id/tv_business_haveoil_oiltype"
            android:layout_width="@dimen/common_title_height"
            android:layout_height="match_parent"
            android:background="@color/color_main"
            android:gravity="center"
            android:text="92#"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_white"
            />
        <TextView
            android:id="@+id/tv_business_haveoil_pur"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_main_title"
            android:textColor="@color/color_black_text"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="@dimen/common_title_height"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_business_haveoil"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_station_check"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>