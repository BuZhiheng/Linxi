<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_buyact_title"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_buyfrm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bg"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_buyact_station"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                />
            <com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader
                android:id="@+id/rv_buyact_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top">
                <include layout="@layout/fragment_buy_title"/>
            </com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader>
            <LinearLayout
                android:id="@+id/ll_buyfrm_nonestation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="160dp"
                android:background="@color/color_white"
                android:gravity="center"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_buyfrm_nostation"
                    />
                <TextView
                    android:id="@+id/tv_buyfrm_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin"
                    android:text=""
                    android:textSize="@dimen/text_common_item_title"
                    />
            </LinearLayout>
        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>