<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/fl_first_togift_guide"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_alpha_black_shallow"
    android:onClick="onClick"
    android:visibility="gone"
    >
    <ImageView
        android:layout_gravity="right"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="@dimen/common_title_height30"
        android:src="@drawable/ic_first_togift_icon"
        />
    <ImageView
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginRight="@dimen/common_margin_large"
        android:src="@drawable/ic_first_togift_msg"
        />
    <ImageView
        android:id="@+id/iv_first_togift_iknow"
        android:layout_gravity="center|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_title_height"
        android:src="@drawable/ic_first_togift_iknow"
        android:onClick="onClick"
        />
</FrameLayout>