<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_automac_type"
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_oiltype_automac_type"
            android:layout_width="@dimen/common_title_height39"
            android:layout_height="@dimen/common_title_height39"
            />
        <TextView
            android:id="@+id/tv_oiltype_automac_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_little"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_black_text"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_oiltype_check"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_red"
        android:visibility="gone"
        />
</FrameLayout>