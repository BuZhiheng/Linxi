<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/color_main"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="员工首页"
            android:textSize="@dimen/text_main_title"
            android:textColor="@color/color_white"
            />
        <TextView
            android:id="@+id/tv_business_index_exit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/common_margin"
            android:gravity="center"
            android:text="退出"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_white"
            />
        <TextView
            android:id="@+id/tv_business_index_sale"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/common_margin"
            android:gravity="center"
            android:text="收现金"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_white"
            android:visibility="visible"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_bg"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_white"
            >
            <TextView
                android:id="@+id/tv_business_index_oil"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height39"
                android:background="@null"
                android:gravity="center"
                android:text="油品"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_main"
                />
            <ImageView
                android:id="@+id/iv_business_index_oil"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/color_main"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_business_index_goods"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height39"
                android:background="@color/color_white"
                android:gravity="center"
                android:text="非油品"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_black_text"
                />
            <ImageView
                android:id="@+id/iv_business_index_goods"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/color_white"
                />
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_business_index"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>