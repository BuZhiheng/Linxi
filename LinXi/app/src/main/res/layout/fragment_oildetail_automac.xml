<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_automac_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >
    <ImageView
        android:id="@+id/iv_oiltype_automac"
        android:layout_gravity="center_vertical"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/common_margin"
        android:src="@drawable/ic_launcher"
        />
    <TextView
        android:id="@+id/tv_oiltype_automac_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="@dimen/common_margin_large"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginBottom="@dimen/common_margin_large"
        android:text=""
        android:textSize="@dimen/text_common_item_title"
        android:textColor="@color/color_black_text"
        />
    <TextView
        android:id="@+id/tv_oiltype_automac_sale"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="@dimen/common_margin_large"
        android:text="已售:100"
        android:textSize="@dimen/text_common_item_content"
        android:textColor="@color/color_gray_deep"
        />
    <LinearLayout
        android:layout_gravity="bottom|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin_large"
        android:layout_marginRight="@dimen/common_margin"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_red"
            />
        <TextView
            android:id="@+id/tv_oiltype_automac_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_little"
            android:text="80.1"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_red"
            />
    </LinearLayout>
</FrameLayout>