<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_title_height"
    android:background="@color/color_main"
    >
<LinearLayout
    android:id="@+id/ll_buyfrm_loc"
    android:layout_gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/common_margin"
    >
    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_mainfrm_loc"
        />
    <TextView
        android:id="@+id/tv_buyfrm_loccity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/common_margin_little"
        android:gravity="center_vertical"
        android:text=""
        android:textSize="@dimen/text_common_item_title"
        android:textColor="@color/color_white"
        />
</LinearLayout>
<TextView
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_main"
    android:gravity="center"
    android:text="@string/app_name"
    android:textSize="@dimen/text_main_title"
    android:textColor="@color/color_white"
    />
    <LinearLayout
        android:id="@+id/ll_buyfrm_share"
        android:layout_gravity="right"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_minefrm_share"
            />
    </LinearLayout>
</FrameLayout>