<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height30"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_marginBottom="@dimen/common_margin"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_myoilcard_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="92#"
            android:textSize="@dimen/text_common_item_content"
            />
        <TextView
            android:id="@+id/tv_myoilcard_purchase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100L"
            android:textSize="@dimen/text_common_item_content"
            />
        <LinearLayout
            android:id="@+id/ll_myoilcard_transfer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_ll_station_gothere"
                android:gravity="center"
                android:text="转让"
                android:textSize="@dimen/text_common_item_content"
                android:textColor="@color/color_main"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_myoilcard_lock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100L"
            android:textSize="@dimen/text_common_item_content"
            />
    </LinearLayout>
</LinearLayout>