<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/color_main"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="@dimen/text_main_title"
            android:textColor="@color/color_white"
            />
        <ImageView
            android:id="@+id/iv_business_share"
            android:layout_width="@dimen/common_title_height"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:padding="15dp"
            android:src="@drawable/ic_minefrm_share"
            android:onClick="onClick"
            />
    </FrameLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_business_minefrm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_bg"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/color_main"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="@dimen/common_title_height30"
                    android:src="@drawable/ic_launcher"
                    />
                <TextView
                    android:id="@+id/tv_business_mine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin"
                    android:text=""
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_white"
                    />
                <TextView
                    android:id="@+id/tv_business_mine_commandcode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_title_height30"
                    android:layout_marginTop="@dimen/common_margin"
                    android:background="@color/color_alpha_black_shallow"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/text_common_item_title"
                    android:textColor="@color/color_white"
                    />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:background="@color/color_white"
                android:onClick="onClick"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:src="@drawable/ic_business_mine_phone"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_title_height"
                    android:text="手机号码"
                    android:textColor="@color/color_black_text"
                    android:textSize="@dimen/text_common_item_title"
                    />
                <TextView
                    android:id="@+id/tv_business_mine_phone"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_title_height"
                    android:layout_marginRight="@dimen/common_title_height30"
                    android:text=""
                    android:textColor="@color/color_black_text"
                    android:textSize="@dimen/text_common_item_title"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:layout_marginTop="@dimen/common_margin_little"
                android:background="@color/color_white"
                android:onClick="onClick"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:src="@drawable/ic_business_mine_command"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_title_height"
                    android:text="APP推广人数"
                    android:textColor="@color/color_black_text"
                    android:textSize="@dimen/text_common_item_title"
                    />
                <TextView
                    android:id="@+id/tv_business_mine_command"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_title_height"
                    android:layout_marginRight="@dimen/common_title_height30"
                    android:text="0"
                    android:textColor="@color/color_black_text"
                    android:textSize="@dimen/text_common_item_title"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/fl_business_mine_income"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:layout_marginTop="@dimen/common_margin_little"
                android:background="@color/color_white"
                android:onClick="onClick"
                >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:src="@drawable/ic_business_mine_income"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_title_height"
                    android:text="推广收益"
                    android:textColor="@color/color_black_text"
                    android:textSize="@dimen/text_common_item_title"
                    />
                <TextView
                    android:id="@+id/tv_business_mine_income"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_title_height"
                    android:layout_marginRight="@dimen/common_title_height30"
                    android:text="0"
                    android:textColor="@color/color_black_text"
                    android:textSize="@dimen/text_common_item_title"
                    />
                <!--<ImageView-->
                    <!--android:layout_gravity="center_vertical|right"-->
                    <!--android:layout_width="15dp"-->
                    <!--android:layout_height="15dp"-->
                    <!--android:layout_marginRight="@dimen/common_margin"-->
                    <!--android:src="@drawable/ic_mainfrm_right"-->
                    <!--/>-->
            </FrameLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>