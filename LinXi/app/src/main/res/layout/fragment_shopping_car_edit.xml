<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_shoppingcar_edit"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/common_title_height"
            >
            <LinearLayout
                android:id="@+id/ll_shoppingcar_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />
        </ScrollView>
        <FrameLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_title_height"
            >
            <TextView
                android:id="@+id/tv_shoppingcar_delete"
                android:layout_gravity="right"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/color_main"
                android:text="删除"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_white"
                />
            <TextView
                android:id="@+id/tv_shoppingcar_share"
                android:layout_gravity="right"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="101dp"
                android:gravity="center"
                android:background="@color/color_blue_shallow"
                android:text="分享"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_white"
                />
        </FrameLayout>
    </FrameLayout>
</LinearLayout>