<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:fillViewport="false">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_login_back"
            android:layout_width="@dimen/common_title_height"
            android:layout_height="@dimen/common_title_height"
            android:padding="15dp"
            android:src="@drawable/ic_login_back"
            android:onClick="onClick"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/common_title_height"
                android:layout_marginRight="@dimen/common_title_height"
                android:layout_marginTop="@dimen/common_title_height"
                android:background="@drawable/bg_ll_common_solid_white"
                android:gravity="center"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_title_height"
                    >
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:src="@drawable/ic_login_user"
                        />
                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/color_gray_deep"
                        />
                    <EditText
                        android:id="@+id/et_login_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:hint="请输入手机号"
                        android:inputType="number"
                        android:maxLength="11"
                        android:gravity="center_vertical"
                        android:textColorHint="@color/color_gray"
                        android:background="@null"
                        />
                </FrameLayout>
                <include layout="@layout/include_div_match"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_title_height"
                    >
                    <!--<ImageView-->
                        <!--android:layout_gravity="center_vertical"-->
                        <!--android:layout_width="20dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:layout_marginLeft="@dimen/common_margin"-->
                        <!--android:src="@drawable/ic_login_psd"-->
                        <!--/>-->
                    <!--<ImageView-->
                        <!--android:layout_width="1dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_marginTop="15dp"-->
                        <!--android:layout_marginLeft="40dp"-->
                        <!--android:layout_marginBottom="15dp"-->
                        <!--android:background="@color/color_gray_deep"-->
                        <!--/>-->
                    <EditText
                        android:id="@+id/et_login_psd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:gravity="center_vertical"
                        android:textColorHint="@color/color_gray"
                        android:background="@null"
                        />
                    <Button
                        android:id="@+id/btn_login_getcode"
                        android:layout_gravity="right"
                        android:layout_width="119dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_ll_station_gothere"
                        android:text="获取验证码"
                        android:textColor="@color/color_main"
                        android:onClick="onClick"
                        />
                </FrameLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_title_height"
                android:layout_marginRight="@dimen/common_title_height"
                android:layout_marginTop="@dimen/common_margin"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tv_login_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号注册"
                    android:onClick="onClick"
                    />
                <TextView
                    android:id="@+id/tv_login_forget"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码?"
                    android:onClick="onClick"
                    />
            </FrameLayout>
            <Button
                android:id="@+id/btn_login_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_title_height"
                android:layout_marginTop="@dimen/common_title_height"
                android:layout_marginLeft="@dimen/common_title_height"
                android:layout_marginRight="@dimen/common_title_height"
                android:background="@drawable/bg_ll_station_goods_yellow"
                android:text="登录"
                android:textSize="@dimen/text_main_title"
                android:textColor="@color/color_white"
                android:onClick="onClick"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_large"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="@dimen/common_title_height"
                    android:layout_marginRight="@dimen/common_title_height"
                    android:background="@color/color_gray_deep"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:padding="@dimen/common_margin"
                    android:text="其它登录方式"
                    android:textColor="@color/color_gray"
                    />
            </FrameLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_title_height30"
                android:layout_marginBottom="@dimen/common_title_height30"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <LinearLayout
                    android:id="@+id/ll_login_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:onClick="onClick"
                    >
                    <ImageView
                        android:layout_width="@dimen/common_title_height30"
                        android:layout_height="@dimen/common_title_height30"
                        android:src="@drawable/ic_login_qq"
                        />
                    <TextView
                        android:id="@+id/tv_login_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_margin"
                        android:text="QQ登录"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_login_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin_large"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:onClick="onClick"
                    >
                    <ImageView
                        android:layout_width="@dimen/common_title_height30"
                        android:layout_height="@dimen/common_title_height30"
                        android:src="@drawable/ic_login_wx"
                        />
                    <TextView
                        android:id="@+id/tv_login_wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_margin"
                        android:text="微信"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin"
                android:orientation="horizontal"
                android:gravity="center"
                android:onClick="onClick"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录即代表你同意"
                    android:textSize="@dimen/text_common_item_content"
                    android:textColor="@color/color_gray"
                    />
                <LinearLayout
                    android:id="@+id/ll_login_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:orientation="vertical"
                    android:onClick="onClick"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="爱加油服务和隐私条款"
                        android:textSize="@dimen/text_common_item_content"
                        android:textColor="@color/color_main"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/color_main"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>